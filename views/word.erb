

<div id="each-word" class="container">
  <div class="row">
    <div class="col-md-6">
      <h1><%= @word.text().upcase()%></h1>

      <br>
      <a href="/words/<%= @word.id()%>/add_definition" role="button" class="btn btn-success">Add deifinition</a>

    </div>
    <div class="col-md-6">
      <h1>Definition:</h1>
      <ol>
      <% @definitions.each() do |definition| %>
        <li><p><%= definition.phrase() %></p></li>
      <% end  %>
      </ol>

    </div>
  </div>

</div>
